{{>header}}

<!--main header-->
<div class="contianer main_header">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="row">
                <!--Left side div-->
                <div class="col-md-6 col-12 main_header_left">
                    <p>Well come to the Weather App</p>
                    <h2>Get the latest <span>Weather</span> info of your City.</h2>
                    <a href="/weather"><button>Check now</button></a>
                </div>
                <!--Left side div-->
                <div class="col-md-6 col-12  main_header_right">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="w-100" src="images/clou.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="w-100" src="images/nig.png" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="w-100" src="images/nor.png" alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="w-100" src="images/snow.png" alt="Third slide">
                            </div>
                            <div class="carousel-item">
                                <img class="w-100" src="images/sun.png" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}